
@{
    ViewBag.Title = "TuVanChonTruong";
    Layout = "~/Views/Shared/_Layout_TuVan.cshtml";
}

<link href="~/Content/css/form_dudoan.css" rel="stylesheet" />
<div class="dudoan" style="margin-top:100px">
    <h2>TƯ VẤN CHỌN TRƯỜNG</h2>
    <div class="form-advisory">       
        <div class="content-form">

            

          
            <div class="group-tv">
                <label>1. Môn học yêu thích (ở THPT)</label>
                <input type="text" id="txtMuc1" class="line-animation" />
                <div class="line"></div>
            </div>


            <div class="group-tv">
                <label>2. Sở trường</label>
                <input type="text" id="txtMuc2" class="line-animation" />
                <div class="line"></div>
            </div>


            <div class="group-tv">
                <label>3. Sở đoản</label>
                <input type="text" id="txtMuc3" class="line-animation" />
                <div class="line"></div>
            </div>
            <div class="group-tv">
                <label>4. Điểm thi tốt nghiệp (dự đoán)</label>
                <input type="text" id="txtMuc4" class="line-animation" />
                <div class="line"></div>
            </div>
            <div class="group-tv">
                <label>5. Tên trường mong muốn</label>
                <textarea rows="5" id="txtMuc5" class="line-area"></textarea>
                <div class="line-area"></div>
            </div>
            <div class="group-tv">
                <label>6. Ngành học</label>
                <input type="text"  id="txtMuc6" class="line-animation">
                <div class="line"></div>
                
            </div>
           
            <a class="btn-dudoan" id="send_dudoan" href="#result">Dự đoán</a>
        </div>
        <div class="result-form" id="result">
            <h3 style="font-weight:bold">KẾT QUẢ</h3>
            <div class="result">
                <p>Bạn <span id="sp_cohoi">....</span> có khả năng trúng tuyển vào trường: <span id="sp_trungtuyen">....</span> với ngành học <span id="sp_nganhhoc">....</span></p>
                <p>Độ chính xácc: <span id="sp_chinhxac">.... %</span></p>                
                
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.menu-tv').removeClass("active");
        $('.tv_chontruong').addClass("active");
    });
    $('#send_dudoan').click(function () {
                var monyeuthich = $('#txtMuc1').val();
                var sotruong = $('#txtMuc2').val();
                var sodoan = $('#txtMuc3').val();
                var diemthi_tn = $('#txtMuc4').val();
                var truongmuon = $('#txtMuc5').val();
                var nganhhoc = $('#txtMuc6').val();
               
               
                if (monyeuthich.length == 0)
                    alert("Vui lòng nhập môn yêu thích");
                else if (sotruong.length == 0)
                    alert("Vui lòng nhập sở trường");
                else if (sodoan.length == 0)
                    alert("Vui lòng nhập sở đoản");
                else if (diemthi_tn.length == 0)
                    alert("Vui lòng nhập điểm thi tốt nghiệp");               
               
                else if (truongmuon.length == 0)
                    alert("Vui lòng nhập tên trường mong muốn");
                else if (nganhhoc.length == 0)
                    alert("Vui lòng nhập ngành học");              
                else
                    $('.result-form').css('display', 'block');
                    // Make sure this.hash has a value before overriding default behavior
        // Prevent default anchor click behavior
                var cohoi = "";
                if (diemthi_tn <= 15)
                    cohoi = "không";
                else if (diemthi_tn > 15)
                    cohoi = "có";
                
                $("#sp_cohoi").text(cohoi);
                $("#sp_trungtuyen").text(truongmuon);
                $("#sp_nganhhoc").text(nganhhoc);
                $("#sp_chinhxac").text("80%");
                

                     event.preventDefault();

                    // Store hash
                            var hash = this.hash;

                    // Using jQuery's animate() method to add smooth page scroll
                    // The optional number (800) specifies the number of milliseconds it takes to scroll to the specified area
                    $('html, body').animate({
                        scrollTop: $(hash).offset().top
                    }, 100, function () {

                        // Add hash (#) to URL when done scrolling (default click behavior)
                        window.location.hash = hash;
                    });
                

    });
</script>



