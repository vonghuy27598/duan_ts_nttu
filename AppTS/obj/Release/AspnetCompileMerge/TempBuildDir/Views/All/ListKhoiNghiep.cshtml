@model IEnumerable<AppTS.ViewModels.KhoiNghiepFull>
@{
    ViewBag.Title = "ListKhoiNghiep";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6 col-sm-6">
        <div class="product__item">
            <div class="product__item__pic set-bg" onclick="window.location.href = '@Url.Action("KhoiNhgiepIndex", "NghienCuu", new { id = item.ID_KHOINGHIEP })'" data-setbg="@item.HINHANH">
            </div>
            <div class="product__item__text">
                <h6><a href="@Url.Action("KhoiNghiepIndex", "NghienCuu", new { id = item.TENKHOINGHIEP })">@item.TENKHOINGHIEP</a></h6>
            </div>
        </div>
    </div>
}

