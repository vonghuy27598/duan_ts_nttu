
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/dangnhap.css" rel="stylesheet" />
<div class="primari-box registered-account dn">
    <form class="new-account-box" id="accountLogin" method="post" action="#">
        <h3 class="box-subheading">Đăng nhập</h3>
        <hr style="border: 1px solid; width: 100px;margin-bottom:35px" />
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <div class="form-content">
                <div class="form-group primary-form-group">
                    <label for="loginemail">Số điện thoại</label>
                    @*<input type="text" value="" name="email" id="loginemail" class="">*@
                    @Html.TextBox("SDT", null, new { required = "required", @id = "mobile", @class = " input-feild line-animation", type = "text" })
                    <div class="line"></div>
                </div>
                <div class="form-group primary-form-group" style="margin-bottom:0px">
                    <label for="password">Mật khẩu</label>
                    @*<input type="password" value="" name="password" id="password" class="form-control input-feild">*@
                    @Html.Password("MatKhau", null, new {@class = "input-feild line-animation" })
                    <div class="line"></div>
                </div>
                <div class="submit-button">

                    <input type="submit" value="Đăng nhập" id="signinCreate" class="btn main-btn checkmobile" style="width:100%" />

                </div>
                <div class="forget-password" style="margin-top:20px">
                    @{
                        var link_qs = "";
                        if (Request.QueryString["link"] != null)
                        {
                            link_qs = Request.QueryString["link"];
                        }
                        if (link_qs.Equals(""))
                        {
                            <a href="@Url.Action("DangKy","HocSinh")">Nếu bạn chưa có tài khoản thì <b style="color:#000">Đăng ký</b></a><br/>
                            <a href="@Url.Action("QuenMK","HocSinh")"><b style="color:#000">Quên mật khẩu</b></a>
                        }
                        else
                        {
                            <a href="@Url.Action("DangKy", "HocSinh", new { link=link_qs })">Nếu bạn chưa có tài khoản thì <b style="color:#000">Đăng ký</b></a>
                        }
                    }


                </div>
                <div class="mess">@ViewBag.ThongBao</div>
            </div>
        }
    </form>
</div>
