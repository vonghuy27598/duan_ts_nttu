@{
    ViewBag.Title = "DuDoan";
    Layout = "~/Views/Shared/_Layout_TuVan.cshtml";
}
<link href="~/Content/css/dangnhap.css" rel="stylesheet" />
<link href="~/Content/css/form_dudoan.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" type="text/css" rel="stylesheet">
<link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'>
<style>
    .d-lg-none {
        display: none
    }
    .btn-dudoan{color:#fff!important;text-decoration:none!important}
    .title_dudoan {
        font-size: calc(20px + (22 - 22) * ((100vw - 300px) / (1600 - 300)));
    }
    td, th {
        padding: 10px;
    }
</style>
<div class="dudoan" style="margin-top:100px">
    <h2 class="title_dudoan">ĐỊNH HƯỚNG NGÀNH NGHỀ</h2>
    <div class="form-advisory">
        <div class="select-form">
            <select style="padding: 2px 10px;">
                <option value="1">Lớp 10</option>
                <option value="2">Lớp 11</option>
                <option value="3">Lớp 12</option>
            </select>
        </div>
        <div class="content-form">
            <p style="margin-bottom:10px;color:blue">Vui lòng nhập điểm các môn học</p>
            <table border="1" cellpadding="10">
                <thead>
                    <tr>
                        <th>Tên môn học</th>
                        <th>Điểm cả năm lớp</th>
                    </tr>

                </thead>
                <tbody>
                    <tr>
                        <td>Toán</td>
                        <td><input type="number" id="txtToan" onkeypress="if(this.value.length==2) return false; " class="line-animation" /><div class="line"></div></td>
                    </tr>
                    <tr>
                        <td>Vật lý</td>
                        <td><input type="number" id="txtLy" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                    </tr>
                    <tr>
                        <td>Hóa học</td>
                        <td><input type="number" id="txtHoa" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                    </tr>
                    <tr>
                        <td>Ngữ văn</td>
                        <td><input type="number" id="txtVan" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                    </tr>
                    <tr>
                        <td>Lịch sử</td>
                        <td><input type="number" id="txtSu" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                    </tr>
                    <tr>
                        <td>Địa lý</td>
                        <td><input type="number" id="txtDia" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                    </tr>
                    <tr>
                        <td>Sinh học</td>
                        <td><input type="number" id="txtSinh" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                    </tr>
                    <tr>
                        <td>Anh văn</td>
                        <td><input type="number" id="txtAnh" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                    </tr>

                </tbody>
            </table>
            <a class="btn-dudoan" id="send_dudoan" href="#result">Định hướng</a>
        </div>
        <div class="result-form" id="result">
            <h4 style="font-weight:bold">Bạn có thể theo học các ngành sau:</h4>



            <ul class="result-tb" style="color: #a90f0f;font-weight: bold;text-align: left;padding-left: 15px;line-height:2"></ul>

        </div>
    </div>
</div>

<input type="hidden" id="hd_checklogin" value="@ViewData["login"]" />
<button type='button' class='btn btn-success btn-lg noibat' data-toggle='modal' data-target='#myModal' style='max-height: 80px; height: 60px; width: 100px; bottom: -135px; right: 0; outline: 0;display:none '> Đăng nhập </button>
<div id="myModal" class="modal fade" role="dialog" style="z-index: 100000; overflow-y: initial !important;">
    <div class="modal-dialog" style="padding: 0; position: absolute; top: 0; left: 0; right: 0;">
        <!-- Modal content-->
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" id="dong" class="close" data-dismiss="modal" style="font-size:30px">&times;</button>
            </div>
            <div class="modal-body" style="overflow-x: hidden; overflow: scroll;height: 85vh;">
                <div class="primari-box registered-account dn" style="width: 100%;">
                    <h3 class="box-subheading">Đăng nhập</h3>
                    <div class="form-content">
                        <div class="form-group primary-form-group">
                            <p style="color:#000" for="loginemail">Số điện thoại</p>
                            @*<input type="text" value="" name="email" id="loginemail" class="">*@
                            @Html.TextBox("SDT", null, new { required = "required", @id = "sdt", @class = " input-feild line-animation", type = "text" })
                            <div class="line"></div>
                        </div>
                        <div class="form-group primary-form-group" style="margin-bottom:0px">
                            <p style="color:#000" for="password">Mật khẩu</p>
                            @*<input type="password" value="" name="password" id="password" class="form-control input-feild">*@
                            @Html.Password("MatKhau", null, new { @class = "input-feild line-animation", @id = "matkhau" })
                            <div class="line"></div>
                        </div>
                        <div class="submit-button">

                            <input type="submit" value="Đăng nhập" id="signinCreate" class="btn main-btn checkmobile" style="width:100%" />

                        </div>
                        <div class="forget-password" style="margin-top:20px">
                            @{
                                var link_qs = "";
                                if (Request.QueryString["link"] != null)
                                {
                                    link_qs = Request.QueryString["link"];
                                }
                                if (link_qs.Equals(""))
                                {
                                    <a href="@Url.Action("DangKy","HocSinh")">Nếu bạn chưa có tài khoản thì <b style="color:#000">Đăng ký</b></a>
                                }
                                else
                                {
                                    <a href="@Url.Action("DangKy", "HocSinh", new { link=link_qs })">Nếu bạn chưa có tài khoản thì <b style="color:#000">Đăng ký</b></a>
                                }
                            }
                        </div>
                        <div class="mess">@ViewBag.ThongBao</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $('.menu-tv').removeClass("active");
        $('.tv_dudoan').addClass("active");
    });
    $("#signinCreate").click(function () {
        var sdt = $("#sdt").val();
        var matkhau = $("#matkhau").val();

        if (sdt.length <= 0) {
            alert("Vui lòng nhập số điện thoại ");
            $("#sdt").focus();

        }
       
        else {
            $.ajax({
                url: "submit_DangNhap",
                data: { sdt: sdt, matkhau: matkhau },
                datatype: "json",
                type: "POST",
                success: function (response) {
                    if (response.success == 1) {
                        $("#dong").click();
                        $("#dong").click();
                        $("#hd_checklogin").val("true");
                        show_result();
                    }
                    else {
                        alert(response.message);

                    }
                }
            });
        }
    });
    $(document).ready(function () {
        // Add smooth scrolling to all links
        $("#send_dudoan").on('click', function (event) {
            var session = $("#hd_checklogin").val();
            if (session == "false") {
                var q = confirm("Vui lòng đăng nhập trước khi xem kết quả");
                if (q == true) {
                    $(".noibat").click();
                }
            }
            else {
                show_result();
            }
     
        });

    });
    function show_result(e)
    {
        var toan = ($('#txtToan').val()).trim();
        var ntoan = parseFloat(toan);

        var ly = ($('#txtLy').val()).trim();
        var nly = parseFloat(ly);

        var hoa = ($('#txtHoa').val()).trim();
        var nhoa = parseFloat(hoa);

        var sinh = ($('#txtSinh').val()).trim();
        var nsinh = parseFloat(sinh);

        var van = ($('#txtVan').val()).trim();
        var nvan = parseFloat(van);

        var su = ($('#txtSu').val()).trim();
        var nsu = parseFloat(su);

        var dia = ($('#txtDia').val()).trim();
        var ndia = parseFloat(dia);

        var anh = ($('#txtAnh').val()).trim();
        var nanh = parseFloat(anh);


        if (toan.length == 0)
            ntoan = 0;
        if (ly.length == 0)
            nly = 0;
        if (hoa.length == 0)
            nhoa = 0;
        if (van.length == 0)
            nvan = 0;
        if (su.length == 0)
            nsu = 0;
        if (dia.length == 0)
            ndia = 0;
        if (sinh.length == 0)
            nsinh = 0;
        if (anh.length == 0)
            nanh = 0;

        if (toan < 0 || toan > 10)
            alert('Điểm toán khoảng từ 0 đến 10');
        else if (ly < 0 || ly > 10)
            alert('Điểm lý khoảng từ 0 đến 10');
        else if (hoa < 0 || hoa > 10)
            alert('Điểm hóa khoảng từ 0 đến 10');
        else if (van < 0 || van > 10)
            alert('Điểm văn khoảng từ 0 đến 10');
        else if (su < 0 || su > 10)
            alert('Điểm sử khoảng từ 0 đến 10');
        else if (dia < 0 || dia > 10)
            alert('Điểm địa khoảng từ 0 đến 10');
        else if (sinh < 0 || sinh > 10)
            alert('Điểm sinh khoảng từ 0 đến 10');
        else if (anh < 0 || anh > 10)
            alert('Điểm anh khoảng từ 0 đến 10');
        else {

            $('.result-form').css('display', 'block');
            $.ajax({
                url: "getNganh_TheoDiem",
                data: { toan: ntoan, ly: nly, hoa: nhoa, van: nvan, su: nsu, dia: ndia, sinh: nsinh, anh: nanh },
                datatype: "json",
                type: "POST",
                success: function (response) {
                    $('.result-tb').empty();
                    if (response.status != null) {
                        $.each(response.status, function () {

                            $('.result-tb').append("<li onclick=\"window.location=\'/Home/ChiTietRiengCacNganh?id=" + this.ID_CHUYENNGANH + "\'\">" + this.TENCHUYENNGANH + " <img src=\"../Content/img/icon-open.png\"/> </li>");
                        })
                    } else {
                        alert("Bạn cần cố gắng thêm. Với số điểm này chưa đạt để đăng ký xét tuyển vào các ngành học của Trường ĐH Nguyễn Tất Thành");
                        $('.result-tb').append("<li>Không có ngành phù hợp</li>");
                    }


                }
            });

            // Make sure this.hash has a value before overriding default behavior
            // Prevent default anchor click behavior
            e.preventDefault();

            // Store hash
            var hash = this.hash;

            // Using jQuery's animate() method to add smooth page scroll
            // The optional number (800) specifies the number of milliseconds it takes to scroll to the specified area
            $('html, body').animate({
                scrollTop: $(hash).offset().top
            }, 1000, function () {

                // Add hash (#) to URL when done scrolling (default click behavior)
                window.location.hash = hash;
            });

        }

    }

</script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css'></script>