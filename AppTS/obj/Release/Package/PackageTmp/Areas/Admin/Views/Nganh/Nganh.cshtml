@model IEnumerable<AppTS.Areas.Admin.Models.ViewModel.Nganh> 
@{
    ViewBag.Title = "Nganh";
    Layout = "~/Areas/Admin/Views/Shared/layout_admin.cshtml";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Quản lý ngành</h1>
<p class="mb-4">Tất cả ngành của Khoa Công Nghệ Thông Tin sẽ hiển thị tại đây.</p>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã ngành</th>
                        <th>Tên ngành</th>
                       
                        <th>Số lượng SV</th>                     
                        <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody class="table_change" id="myTable">
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.ID_NGANH">
                            <td>@item.ID_NGANH</td>
                            <td class="tennganh" id="tennganh_@item.ID_NGANH">@item.TENNGANH</td>
                           
                            <td>@item.SOLUONGSV</td>                         
                            <td width="4%"><img src="~/Content/Admin/img/icon_edit.png" width="90%" onclick="editNganh(@item.ID_NGANH)" class="icon_edit" id="icon_edit_@item.ID_NGANH" style="cursor:pointer"/></td>
                            <td width="4%">                            
                            @Ajax.ImageActionLink("../../Content/Admin/img/icon_delete.png", "Xóa", "Delete", new { @id_nganh = @item.ID_NGANH }, new AjaxOptions { Confirm = "Bạn có muốn xóa không?", HttpMethod = "DELETE" }, new { style = "width:90%;padding-top: 5px;" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <!-- Trigger/Open The Modal -->
       

        <!-- The Modal -->
     
</div>
   
    <script src="~/Content/Admin/Scripts/ScriptNganh.js"></script>
