
@{
    ViewBag.Title = "KhaoSatHS";
    Layout = "~/Views/Shared/_Layout_KhaoSat.cshtml";
}
<div class="dudoan" style="margin-top:50px">
    <h2 style="font-weight:bold">KHẢO SÁT HỌC LỰC HỌC SINH</h2>
    <div class="form-advisory">
        <div class="content-form">


            <div class="group-tv">
                <label>1. Điểm các môn học</label>
            </div>
            <div style="margin-right:10px" class="content-form">
                <table border="1" cellpadding="10">
                    <thead>
                        <tr>
                            <th>Tên môn học</th>
                            <th>Điểm cả năm lớp</th>
                        </tr>

                    </thead>
                    <tbody>
                        <tr>
                            <td>Toán</td>
                            <td><input type="number" id="txtToan" onkeypress="if(this.value.length==2) return false; " class="line-animation" /><div class="line"></div></td>
                        </tr>
                        <tr>
                            <td>Vật lý</td>
                            <td><input type="number" id="txtLy" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                        </tr>
                        <tr>
                            <td>Hóa học</td>
                            <td><input type="number" id="txtHoa" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                        </tr>
                        <tr>
                            <td>Ngữ văn</td>
                            <td><input type="number" id="txtVan" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                        </tr>
                        <tr>
                            <td>Lịch sử</td>
                            <td><input type="number" id="txtSu" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                        </tr>
                        <tr>
                            <td>Địa lý</td>
                            <td><input type="number" id="txtDia" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                        </tr>
                        <tr>
                            <td>Sinh học</td>
                            <td><input type="number" id="txtSinh" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                        </tr>
                        <tr>
                            <td>Anh văn</td>
                            <td><input type="number" id="txtAnh" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                        </tr>
                        <tr>
                            <td>Giáo dục công dân</td>
                            <td><input type="number" id="txtGD" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                        </tr>
                        <tr>
                            <td>Tin học</td>
                            <td><input type="number" id="txtTin" onkeypress="if(this.value.length==2) return false;" class="line-animation" /><div class="line"></div></td>
                        </tr>
                    </tbody>
                </table>

                <div class="group-tv">
                    <label>2. Ngành học yêu thích:</label>
                    <input type="text" id="quymo" class="line-animation" /><div class="line"></div>
                </div>

                <div class="group-tv">
                    <label>3. Trường ĐH/CĐ yêu thích:</label>
                    <input type="text" id="linhvuc1" class="line-animation" /><div class="line"></div>
                </div>

                <div class="group-tv">
                    <label>4. Môn học yêu thích:</label>
                    <input type="text" id="linhvuc2" class="line-animation" /><div class="line"></div>
                </div>


                <div class="group-tv">
                    <label>5. Sở trường:</label>
                    <input type="text" id="linhvuc3" class="line-animation" /><div class="line"></div>
                </div>

                <div class="group-tv">
                    <label>6. Sở đoản:</label>
                    <input type="text" id="linhvuc4" class="line-animation" /><div class="line"></div>
                </div>

                <div class="group-tv">
                    <label>7. Ngành nghề mà bạn muốn hướng tới:</label>
                    <textarea rows="5" id="linhvuc5" class="line-area"></textarea>
                </div>
            </div>
            <a class="btn-dudoan" id="send_khaosat" href="#result">Gửi khảo sát</a>
        </div>
    </div>
</div>  
<script>
    $(document).ready(function () {
        $(".dropdown").removeClass("active");
        $(".list_dropks").css("display", "none");
        $(".list_hs").css("display","block");
        $(".hs-drop").addClass("active");
        $(".hs_child").removeClass("active");
        $(".hs_1").addClass("active");
    });
</script>