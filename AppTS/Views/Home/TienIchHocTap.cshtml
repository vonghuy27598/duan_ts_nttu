@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ChiTietCacNganh</title>

    <style>
        body {
            padding: 0;
            margin: 0;
        }

        * {
            box-sizing: border-box;
        }

        /* Create two equal columns that floats next to each other */
        .column {
            float: left;
            width: 100%;
            padding: 10px;
            border-bottom: 1px solid #dfdfdf;
            background-origin: content-box;
            background-size: 10%;
            padding-left: 5px;
            position: relative;
        }

            .column p {
                font-size: calc(12px + (16 - 12) * ((100vw - 300px) / (1600 - 300)));
                padding-left: 15%;
                padding-right: 25px
            }

        .icon_arrow_right {
            background-image: url(/Content/img/arrow_right.png);
            background-position: center right;
            background-repeat: no-repeat;
            background-size: contain;
            width: 20px;
            height: 20px;
            position: absolute;
            top: 50%;
            margin-top: -10px;
            right: 15px;
        }
        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }
    </style>
</head>
<body>
    <div>
        <div class="header-logo">
            <img src="~/Content/css/main/images/logo.jpg" style="width:80%;height:auto" />
        </div>
        <img src="/Content/img/tienich.jpg" style="width:100%;height:auto" />
        <div class="row">
            <div class="column" onclick="window.location='/Home/ChiTietTienIch?id_tienich=1'" style="background-image:url('/Content/img/icon_anh.png');background-repeat:no-repeat;background-position:center left">
                <p style=""> CHƯƠNG TRÌNH ĐÀO TẠO <b>TIẾNG ANH</b> </p>
                <div class="icon_arrow_right">

                </div>
            </div>
            <div class="column" onclick="window.location='/Home/ChiTietTienIch?id_tienich=2'" style="background-image:url('/Content/img/icon_sinhhoc.png');background-repeat:no-repeat;background-position:center left">
                <p style="">CHƯƠNG TRÌNH ĐÀO TẠO <b>SINH HỌC</b> </p>
                <div class="icon_arrow_right">

                </div>
            </div>
            <div class="column" onclick="window.location='/Home/ChiTietTienIch?id_tienich=3'" style="background-image:url('/Content/img/icon_vatly.png');background-repeat:no-repeat;background-position:center left">
                <p style="">CHƯƠNG TRÌNH ĐÀO TẠO <b>VẬT LÝ</b> </p>
                <div class="icon_arrow_right">

                </div>
            </div>
            <div class="column" onclick="window.location='/Home/ChiTietTienIch?id_tienich=4'" style="background-image:url('/Content/img/icon_hoa.jpg');background-repeat:no-repeat;background-position:center left">
                <p style="">ĐÀO TẠO <b>HÓA HỌC</b></p>
                <div class="icon_arrow_right">

                </div>
            </div>
            <div class="column" onclick="window.location='/Home/ChiTietTienIch?id_tienich=5'" style="background-image: url('/Content/img/icon_toan.png'); background-repeat: no-repeat; background-position: center left">
                <p style="">ĐÀO TẠO <b>TOÁN</b></p>
                <div class="icon_arrow_right">

                </div>
            </div>
        </div>


    </div>
</body>
</html>
