@model AppTS.ViewModels.HocSinh_TK
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .dn h5 {
        color: #02add7;
        margin-top: 15px;
        margin-bottom: 20px;
        font-size: calc(17px + (18 - 17) * ((100vw - 300px) / (1600 - 300)));
        text-transform: uppercase;
        font-weight: bold;
    }

    .dn select {
        padding: 5px 0;
        font-size: calc(15px + (17 - 15) * ((100vw - 300px) / (1600 - 300)));
        border-top: none;
        border-left: none;
        border-right: none;
        max-width: 100%;
        width: 100%;
        margin-top: 10px;
    }

    .dn option {
        font-size: calc(11px + (14 - 11) * ((100vw - 300px) / (1600 - 300)));
    }

        .dn option[value=""] {
            background: #dddddd;
        }

    .d-lg-none {
        display: none;
    }

    #admission:focus {
        color: #fff !important;
    }

    #intro {
        padding: 0;
    }

    .tag_lichsu {
        display: none !important;
    }

    .table__history th {
        font-size: calc(16px + (18 - 16) * ((100vw - 300px) / (1600 - 300)));
        text-align: center;
        padding: 10px;
    }

    .table__history td {
        font-size: calc(13px + (15 - 13) * ((100vw - 300px) / (1600 - 300)));
        text-align: center;
        padding: 10px;
    }

    .swal2-title {
        font-size: 14px;
    }
</style>
